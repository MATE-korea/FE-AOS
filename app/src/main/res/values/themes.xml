<resources>

    <style name="Theme.CarPool" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textColor">@color/black_151515</item>

        <item name="actionBarTheme">@style/Theme.CarPool.ActionBar</item>
    </style>

    <style name="Theme.CarPool.NoActionBar" parent="Theme.CarPool">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>