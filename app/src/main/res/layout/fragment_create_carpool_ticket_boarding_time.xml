<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screen.createCarpool.fragment.CreateTicketBoardingTimeFragment">
    <data>
        <variable
            name="navController"
            type="androidx.navigation.NavController" />
        <variable
            name="context"
            type="androidx.fragment.app.FragmentActivity" />
        <variable
            name="createCarpoolViewModel"
            type="com.mate.carpool.ui.screen.createCarpool.vm.CreateTicketViewModel" />
        <import type="java.util.ArrayList"/>
        <import type="com.mate.carpool.R"/>
        <variable
            name="dayStatus"
            type="ArrayList&lt;String&gt;"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:id="@+id/appbar_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_Total"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            navController="@{navController}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_Total"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/appbar_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_bar3"
                android:layout_width="0dp"
                android:layout_height="7dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_100_gray_dadde1"
                app:layout_constraintBottom_toTopOf="@+id/tv_carpool1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_bar2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_bar2"
                android:layout_width="0dp"
                android:layout_height="7dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_100_gray_dadde1"
                app:layout_constraintBottom_toTopOf="@+id/tv_carpool1"
                app:layout_constraintEnd_toStartOf="@+id/tv_bar3"
                app:layout_constraintStart_toEndOf="@+id/tv_bar1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_bar1"
                android:layout_width="0dp"
                android:layout_height="7dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_100_blue"
                app:layout_constraintBottom_toTopOf="@+id/tv_carpool1"
                app:layout_constraintEnd_toStartOf="@+id/tv_bar2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_carpool1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="출발시간을 설정해 주세요."
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_startingArea"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_bar1" />

            <TextView
                android:id="@+id/tv_startingArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:text="출발 날짜"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/tl_StartingDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_carpool1" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_StartingDate"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/출발날짜"
                app:layout_constraintBottom_toTopOf="@+id/tv_boardingStatus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_startingArea"
                app:startIconDrawable="@drawable/ic_baseline_calendar_month_24"
                app:startIconTint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_startingDate"
                    ticketViewModel="@{createCarpoolViewModel}"
                    context="@{context}"
                    buttonFlag="@{createCarpoolViewModel.boardingTimeButtonFlag}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_boardingStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:text="오전/오후"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/tl_boardingStatus"
                app:layout_constraintEnd_toStartOf="@id/tv_boardingTime"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tl_StartingDate"
                app:layout_constraintWidth_percent="0.3"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_boardingStatus"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:hint="오전"
                app:layout_constraintBottom_toTopOf="@+id/guidelineButtonPosition2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_boardingStatus"
                app:layout_constraintEnd_toStartOf="@id/tl_boardingTime"
                app:layout_constraintWidth_percent="0.3">

                <AutoCompleteTextView
                    areaItems="@{dayStatus}"
                    context="@{context}"
                    ticketViewModel="@{createCarpoolViewModel}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusableInTouchMode="false"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_boardingTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:text="출발 시간"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/tl_boardingStatus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/tv_boardingStatus"
                app:layout_constraintTop_toBottomOf="@id/tl_StartingDate"
                app:layout_constraintWidth_percent="0.6" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_boardingTime"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/출발시간"
                app:layout_constraintBottom_toTopOf="@+id/guidelineButtonPosition2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tl_boardingStatus"
                app:layout_constraintTop_toBottomOf="@+id/tv_boardingStatus"
                app:layout_constraintWidth_percent="0.6">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_startingTime"
                    ticketViewModel="@{createCarpoolViewModel}"
                    context="@{context}"
                    buttonFlag="@{createCarpoolViewModel.boardingTimeButtonFlag}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineButtonPosition2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm"
                navController="@{navController}"
                navi_ID="@{R.id.action_createTicketBoardingTimeFragment_to_createTicketOpenChatFragment}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:height="50dp"
                android:background="@drawable/button_select_navigate"
                android:gravity="center"
                android:text="@string/login_next"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/guidelineButtonPosition"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.083"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineButtonPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.95" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>