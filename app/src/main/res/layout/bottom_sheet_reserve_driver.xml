<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screen.reserveDriver.fragment.ReserveDriverFragment">
    <data>
        <variable
            name="reserveDriverViewModel"
            type="com.mate.carpool.ui.screen.reserveDriver.vm.ReserveDriverViewModel" />
        <import type="com.mate.carpool.R"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_driverInfo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/guidelineButtonPosition2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.11"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_openChat">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_home_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/text_driver_name"
                app:layout_constraintHeight_percent="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_driver"
                app:layout_constraintWidth_percent="0.14" />

            <TextView
                android:id="@+id/text_driver"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:text="드라이버"
                android:textColor="@color/gray_4E5760"
                app:layout_constraintBottom_toTopOf="@+id/img_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.23"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_driver_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{reserveDriverViewModel.ticketDetail.memberName}"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_profile"
                app:layout_constraintTop_toBottomOf="@+id/text_driver" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineButtonPosition2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/image_x"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_boardingArea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_x" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_startingArea"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_10_gray"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/layout_startingTime"
            app:layout_constraintEnd_toStartOf="@+id/img_arrow"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_x"
            app:layout_constraintWidth_percent="0.3">

            <TextView
                android:id="@+id/tv_startingDeparture"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="출발지"
                android:textColor="@color/gray_4E5760"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_startingArea"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_startingArea"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:text="@{reserveDriverViewModel.ticketDetail.startArea}"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_startingDeparture" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_startingTime"
            app:layout_constraintEnd_toStartOf="@+id/layout_boardingArea"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/layout_startingArea"
            app:layout_constraintTop_toBottomOf="@+id/image_x"
            app:layout_constraintWidth_percent="0.3"
            app:srcCompat="@drawable/ic_ticket_bluearrow" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_boardingArea"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/round_10_gray"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/layout_boardingLocation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img_arrow"
            app:layout_constraintTop_toBottomOf="@+id/image_x"
            app:layout_constraintWidth_percent="0.3">

            <TextView
                android:id="@+id/tv_boardingDeparture"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="도착지"
                android:textColor="@color/gray_4E5760"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_boardingArea"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_boardingArea"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@{reserveDriverViewModel.ticketDetail.endArea}"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_boardingDeparture" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_startingTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_boardingNumber"
            app:layout_constraintEnd_toStartOf="@+id/layout_boardingLocation"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_startingArea">

            <TextView
                android:id="@+id/text_time_departure"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="출발 시간"
                android:textColor="@color/gray_4E5760"
                app:layout_constraintBottom_toTopOf="@+id/text_time_departure_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_time_departure_detail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@{reserveDriverViewModel.ticketDetail.startTime}"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_time_departure" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_boardingNumber"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/layout_openChat"
            app:layout_constraintEnd_toStartOf="@+id/layout_boardingFee"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_startingTime">

            <TextView
                android:id="@+id/text_bording_number"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="탑승 인원"
                android:textColor="@color/gray_4E5760"
                app:layout_constraintBottom_toTopOf="@+id/text_bording_number_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_bording_number_detail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@{Integer.toString(reserveDriverViewModel.ticketDetail.recruitPerson)}"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_bording_number" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_boardingLocation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/layout_boardingFee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toEndOf="@+id/layout_startingTime"
            app:layout_constraintTop_toBottomOf="@id/layout_boardingArea">

            <TextView
                android:id="@+id/text_bording_location"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="탑승 장소"
                android:textColor="@color/gray_4E5760"
                app:layout_constraintBottom_toTopOf="@+id/text_bording_location_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_bording_location_detail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@{reserveDriverViewModel.ticketDetail.boardingPlace}"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_bording_location" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_boardingFee"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/layout_openChat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toEndOf="@+id/layout_boardingNumber"
            app:layout_constraintTop_toBottomOf="@+id/layout_boardingLocation">

            <TextView
                android:id="@+id/text_charge"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="비용"
                android:textColor="@color/gray_4E5760"
                app:layout_constraintBottom_toTopOf="@+id/text_charge_type"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_charge_type"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@{reserveDriverViewModel.ticketDetail.ticketType}"
                android:textColor="@color/red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_charge" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_openChat"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_driverInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_boardingNumber"
            app:layout_constraintHeight_percent="0.05">

            <ImageView
                android:id="@+id/img_openChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_openChat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1"
                app:srcCompat="@drawable/icon_kakao" />

            <TextView
                android:id="@+id/tv_openChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="오픈 카톡 참여하기"
                android:textColor="@color/black_151515"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_ticket_rightarrow"
                app:layout_constraintStart_toEndOf="@+id/img_openChat"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_ticket_rightarrow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_openChat"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1"
                app:srcCompat="@drawable/ic_home_rightarrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_passengerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@{reserveDriverViewModel.passengerCount}"
            android:textColor="@color/gray_4E5760"
            app:layout_constraintBottom_toTopOf="@id/recyclerview_passengers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_driverInfo" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_passengers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_passengerCount" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:height="50dp"
            android:gravity="center"
            android:text="티켓 삭제"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="100dp"
            app:strokeColor="@color/blue"
            app:layout_constraintBottom_toTopOf="@+id/guidelineButtonPosition"
            app:layout_constraintEnd_toStartOf="@id/btn_confirm"
            app:layout_constraintHeight_percent="0.083"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:height="50dp"
            android:gravity="center"
            android:text="운행 종료"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/blue"
            app:cornerRadius="100dp"
            app:layout_constraintBottom_toTopOf="@+id/guidelineButtonPosition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.083"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/btn_cancel" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineButtonPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.96" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>