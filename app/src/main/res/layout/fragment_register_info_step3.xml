<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.mate.carpool.ui.screen.register.vm.RegisterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/login_input_student_major"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_department_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:background="#33FF0000">

            <TextView
                android:id="@+id/tv_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="학과"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/et_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_stoke_1dp_gray_radius_4dp"
                android:hint="예: 미학과"
                android:maxLength="15"
                android:maxLines="1"
                android:paddingHorizontal="12dp"
                android:paddingVertical="15dp"
                android:text="@={viewModel.department}"
                android:textSize="16dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_student_id_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/ll_department_container">

            <include
                layout="@layout/itemview_register_info"
                app:input="@={viewModel.studentId}"
                app:title="@{`학번`}" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/fl_student_id_container">

            <include
                layout="@layout/itemview_register_info"
                app:input="@={viewModel.name}"
                app:title="@{`이름`}" />
        </FrameLayout>

        <TextView
            android:id="@+id/btn_confirm"
            style="@style/Theme.CarPool.NextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:enabled="@{viewModel.validDepartmentInput}"
            android:gravity="center"
            android:text="@string/login_confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>