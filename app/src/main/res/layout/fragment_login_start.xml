<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="navController"
            type="androidx.navigation.NavController" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_login_type"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="@string/login_input_login"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_login_type">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_name"
                android:textColor="@color/black_151515"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/text_name"
                android:background="@drawable/round_10_gray"
                android:hint="@string/login_name_example"
                android:paddingStart="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_student_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_name"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/text_student_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_student_number"
                android:textColor="@color/black_151515"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edit_student_number"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/text_student_number"
                android:background="@drawable/round_10_gray"
                android:hint="@string/login_student_number_example"
                android:paddingStart="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_student_number"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/text_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_number"
                android:textColor="@color/black_151515"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edit_number"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/text_number"
                android:background="@drawable/round_10_gray"
                android:hint="@string/login_number_example"
                android:paddingStart="5dp" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="33dp"
            android:height="50dp"
            android:background="@drawable/round_100_blue"
            android:gravity="center"
            android:text="@string/login_next"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
</layout>