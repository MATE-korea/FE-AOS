<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.screen.register.fragment.RegisterSelectDayFragment">

    <data>

        <import type="com.mate.carpool.R" />

        <variable
            name="viewModel"
            type="com.mate.carpool.ui.screen.register.vm.RegisterViewModel" />

        <variable
            name="navController"
            type="androidx.navigation.NavController" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/text_login_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/login_input_day"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_login_type">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDayMon"
                viewModel="@{viewModel}"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/button_select_week"
                android:text="월"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnDayTues"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDayTues"
                viewModel="@{viewModel}"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/button_select_week"
                android:text="화"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnDayWed"
                app:layout_constraintStart_toEndOf="@id/btnDayMon"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDayWed"
                viewModel="@{viewModel}"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="1dp"
                android:background="@drawable/button_select_week"
                android:text="수"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnDayThur"
                app:layout_constraintStart_toEndOf="@id/btnDayTues"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDayThur"
                viewModel="@{viewModel}"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/button_select_week"
                android:text="목"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnDayFri"
                app:layout_constraintStart_toEndOf="@id/btnDayWed"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDayFri"
                viewModel="@{viewModel}"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/button_select_week"
                android:text="금"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnDayThur"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btn_confirm"
            style="@style/Theme.CarPool.NextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:text="@string/login_confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>