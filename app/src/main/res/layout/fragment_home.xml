<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mate.carpool.ui.fragment.HomeFragment" >

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_home_profile"
        app:layout_constraintEnd_toStartOf="@+id/img_setting"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_mate_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_setting"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="19dp"
        android:src="@drawable/ic_home_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="21dp"
        android:height="50dp"
        android:background="@drawable/round_100_black_1515"
        android:gravity="center"
        android:text="@string/home_no_reservation"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_notice"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_10_white"
        android:drawableStart="@drawable/ic_home_folder"
        android:drawableEnd="@drawable/ic_home_rightarrow"
        android:drawablePadding="10dp"
        android:includeFontPadding="false"
        android:paddingStart="18dp"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:shadowColor="#FFFFFF"
        android:text="공지사항"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_loaction"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_10_white"
        android:drawableStart="@drawable/ic_home_location"
        android:drawableEnd="@drawable/ic_home_rightarrow"
        android:drawablePadding="10dp"
        android:includeFontPadding="false"
        android:paddingStart="18dp"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:shadowColor="#FFFFFF"
        android:text="지역 설정"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_notice" />

    <TextView
        android:id="@+id/text_carpool_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="27dp"
        android:text="카풀목록"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/img_list"
        app:layout_constraintTop_toBottomOf="@+id/btn_loaction" />

    <ImageView
        android:id="@+id/img_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/ic_home_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_loaction" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_loaction">

        <ImageView
            android:id="@+id/img_reddot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_home_reddot" />

        <TextView
            android:id="@+id/text_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="유료"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/img_list"
            app:layout_constraintTop_toBottomOf="@+id/btn_loaction" />

        <ImageView
            android:id="@+id/img_bluedot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_home_bluedot" />

        <TextView
            android:id="@+id/text_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="무료"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/img_list"
            app:layout_constraintTop_toBottomOf="@+id/btn_loaction" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="310dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/carpoolUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_recycler_home" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
